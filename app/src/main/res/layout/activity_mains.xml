<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Spinner
        android:id="@+id/audio_output_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        android:layout_below="@+id/audio_output_spinner"
        android:layout_alignStart="@+id/audio_output_spinner"
        android:layout_alignEnd="@+id/audio_output_spinner" />

    <!-- You can add other UI elements here -->

</RelativeLayout>